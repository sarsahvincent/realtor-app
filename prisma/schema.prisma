// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int       @id @default(autoincrement())
  name            String
  phone           String
  email           String    @unique
  password        String
  user_type       UserType
  homes           Home[]
  buyer_message   Message[] @relation("buyer_messages")
  realtor_message Message[] @relation("realtor_messages")
  updated_at      DateTime  @updatedAt
  created         DateTime  @default(now())
}

model Home {
  id                  Int          @id @default(autoincrement())
  address             String
  number_of_bedrooms  Int
  number_of_bathrooms Float
  city                String
  listed_data         DateTime     @default(now())
  price               Float
  land_size           Float
  propertyType        PropertyType
  created             DateTime     @default(now())
  updated_at          DateTime     @updatedAt
  images              Image[]
  realtor_id          Int
  realtor             User         @relation(fields: [realtor_id], references: [id])
  message             Message[]
}

model Image {
  id         Int      @id @default(autoincrement())
  url        String
  home_id    Int
  home       Home     @relation(fields: [home_id], references: [id])
  created    DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Message {
  id         Int      @id @default(autoincrement())
  message    String
  home_id    Int
  home       Home     @relation(fields: [home_id], references: [id])
  realtor_id Int
  realtor    User     @relation("realtor_messages", fields: [realtor_id], references: [id])
  buyer_id   Int
  buyer      User     @relation("buyer_messages", fields: [buyer_id], references: [id])
  eated      DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum PropertyType {
  RESIDENTIAL
  CONDO
}

enum UserType {
  ADMIN
  BUYER
  REALTOR
}
